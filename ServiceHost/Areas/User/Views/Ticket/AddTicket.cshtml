@using Eshop.Domain.Entities.Contact.Ticket
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Eshop.Domain.Dtos.Contact.Ticket.AddTicketDto

@{
    ViewData["Title"] = "ایجاد تیکت جدید";
}

@section script {
    <partial name="_JqueryValidators" />
}



<section class="content my-xl-3 my-5 py-xl-4 py-5">
    <div class="container-fluid">
        <div class="row gy-3">
            <!-- side nav -->
            <div class="col-xl-3">
                <!--   start panel menu mobile  -->
                <div class="custom-filter d-xl-none d-block">
                    <button class="btn btn-filter-float border-0 btn-dark shadow-box px-4 rounded-3 position-fixed" style="z-index: 999;bottom:75px;" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">
                        <i class="bi bi-funnel font-20 fw-bold text-white"></i>
                        <span class="d-block font-14 text-white">منو</span>
                    </button>
                    <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
                        <div class="offcanvas-header">
                            <h5 class="offcanvas-title" id="offcanvasRightLabel1">منو</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                        </div>
                        <div class="offcanvas-body">
                            <aside class="profile-card">
                                <div class="profile-header d-flex align-items-center">
                                    <img src="~/MainTemplate/assets/image/user/user.png" alt="کاربر">
                                    <div class="ms-3">
                                        <h6 class="mt-2">امیر رضایی</h6>
                                        <div class="d-flex align-items-center justify-content-between">
                                            <p class="text-muted small mt-1">طراح و برنامه نویس</p>
                                            <a href="" class="ms-2"><i class="bi bi-pencil-square"></i></a>
                                        </div>
                                    </div>
                                </div>
                                <div class="profile-menu">
                                    <a href="#" class="active"><i class="bi bi-shop-window"></i> خلاصه فعالیت</a>
                                    <a href="#"><i class="bi bi-bag"></i> سفارش‌ها</a>
                                    <a href="#"><i class="bi bi-bell"></i> دیدگاه‌ها</a>
                                    <a href="#"><i class="bi bi-heart"></i> لیست علاقه‌مندی</a>
                                    <a href="#"><i class="bi bi-person"></i> اطلاعات حساب کاربری</a>
                                    <a href="#" class="logout"><i class="bi bi-box-arrow-right"></i> خروج</a>
                                </div>
                            </aside>
                        </div>
                    </div>
                </div>
                <!--   end panel menu mobile   -->
                <!--   start panel menu desktop  -->
                @await Component.InvokeAsync("UserSidebarDashboard")
                <!--   end panel menu desktop  -->
            </div>
            <!-- main content -->
            <div class="col-xl-9">
                <!-- status card -->
                <form asp-area="User" asp-controller="Ticket" asp-action="AddTicket" method="post">
                    <div class="row g-4 bg-white">
                        <div class="col-md-12">
                            <div class="comment-item">
                                <input asp-for="Title" type="text" class="form-control" placeholder="عنوان تیکت را وارد کنید...">
                                <label class="form-label label-float fw-bold font-16">
                                    عنوان تیکت
                                    <span class="text-danger">*</span>
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex border-ui bg-white alert align-items-center justify-content-between">
                                <div class="product-meta-color w-100">
                                    <label class="font-16 fw-bold icon-circle">
                                        اولویت تیکت
                                    </label>
                                    <div class="product-meta-color-items mt-3">
                                         <select asp-for="TicketPriority" asp-items="@(Html.GetEnumSelectList<TicketPriority>())" class="form-select">
                                            <option value="0">انتخاب نمایید ...</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex border-ui bg-white alert align-items-center justify-content-between">
                                <div class="product-meta-color w-100">
                                    <label class="font-16 fw-bold icon-circle">
                                        بخش مورد نظر
                                    </label>
                                    <div class="product-meta-color-items mt-3">
                                        <select asp-for="TicketSection" asp-items="@(Html.GetEnumSelectList<TicketSection>())" class="form-select">
                                            <option value="0">انتخاب نمایید ...</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="comment-item">
                                <textarea class="form-control" asp-for="Text" ckeditor ="1" rows="5"></textarea>
                                <label class="form-label label-float fw-bold font-16">
                                    <span class="text-danger">*</span>
                                    <span asp-validation-for="Text" class="text-danger"></span>
                                </label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <button type="submit" class="btn main-color-one-bg border-0">
                                    ثبت تیکت
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
