@using Eshop.Application.Utilities
@using Eshop.Domain.Dtos.Product
@model Eshop.Domain.Dtos.Product.FilterProductBrandDto
@{
    ViewData["Title"] = "لیست برند محصولات";

}


@section scripts
    {
    <partial name="_JqueryValidators" />
}

<div class="row pt-2 pb-2">
    <div class="col-sm-9">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Administration" asp-controller="Home" asp-action="Index">داشبورد</a></li>
            <li class="breadcrumb-item"><a href="javaScript:void();">مدیریت برندها</a></li>
            <li class="breadcrumb-item"><a href="javaScript:void();">@ViewData["Title"]</a></li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header"><i class="fa fa-filter"></i> فیلتر ها</div>
            <div class="card-body">

                <form asp-area="Administration" asp-controller="Product" asp-action="ProductBrandList" method="get" id="filter-form">
                    <input type="hidden" asp-for="PageId" />
                    <div class="row">
                        <div class="form-group col-lg-6">
                            <label>نام برند</label>
                            <input class="form-control" asp-for="BrandName" />
                        </div>
                        
                        <div class="form-group col-lg-3">
                            <div>
                                <label>وضعیت</label>
                            </div>
                            @foreach (var item in Html.GetEnumSelectList<FilterProductBrandState>())
                            {
                                <div class=" radio icheck-material-white icheck-inline">
                                    <label>
                                        <input type="radio" style="width: 16px;height: 16px" value="@item.Value" name="@nameof(Model.ProductBrandState)"
                                               @(Convert.ToInt32(item.Value) == Convert.ToInt32(Model.ProductBrandState) ? "checked" : "")>
                                        <span class="text">@item.Text</span>
                                    </label>
                                </div>
                            }
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">اعمال فیلتر</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <i class="fa fa-table"></i> @ViewData["Title"]
                <a asp-area="Administration" asp-controller="Product" asp-action="CreateProductBrand"
                   class="btn btn-success me-2" style="float: left">
                    <i class="fa fa-check-circle"></i> افزودن برند جدید
                </a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <div id="default-datatable_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                        <br />
                        <div class="row">
                            <div class="col-sm-12">
                                @if (Model.ProductBrands != null && Model.ProductBrands.Any())
                                {
                                    <table id="default-datatable" class="table table-bordered dataTable" role="grid" aria-describedby="default-datatable_info">
                                        <thead>
                                            <tr role="row">
                                                <th class="sorting_asc">شناسه</th>
                                                <th class="sorting">تصویر</th>
                                                <th class="sorting">نام برند</th>
                                                <th class="sorting">توضیحات</th>
                                                <th class="sorting">تاریخ ایجاد</th>
                                                <th class="sorting">ویرایش شده</th>
                                                <th class="sorting">دستورات</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @foreach (var brand in Model.ProductBrands)
                                            {
                                                <tr id="ajax-url-item-@brand.Id" role="row" class="odd">
                                                    <td>@brand.Id</td>
                                                    <td class="sorting">
                                                        <img style="width: 50px; height: 50px;"
                                                             src="@(!string.IsNullOrEmpty(brand.BrandImage) ? PathExtension.ProductBrandOrigin + brand.BrandImage : PathExtension.DefaultAvatar)" alt="@brand.BrandName" />
                                                    </td>

                                                    <td>@brand.BrandName</td>
                                                    <td>@(brand.Description.Substring(0, Math.Min(brand.Description.Length, 50)) + " ...")</td>
                                                    <td>@brand.CreateDate.ToStringShamsiDate()</td>
                                                    <td>@brand.LastUpdateDate.ToStringShamsiDate() | @brand.UserName</td>
                                                    <td>
                                                        <a asp-area="Administration" asp-controller="Product" asp-action="EditProductBrand" asp-route-brandId="@brand.Id" class="btn btn-sm btn-warning">
                                                            ویرایش اطلاعات
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                }
                                else
                                {
                                    <div class="alert alert-warning alert-dismissible mb-0" role="alert">
                                        <div class="alert-icon">
                                            <i class="fa fa-exclamation-triangle"></i>
                                        </div>
                                        <div class="alert-message text-dark">
                                            <span><strong>هشدار!</strong> هیچ اطلاعاتی یافت نشد</span>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                        <hr />
                        <hr />
                    </div>
                </div>
                <br />
                <partial name="_AdminPaging" model="@Model.GetCurrentPaging()" />
                <div class="col-sm-12 col-md-12">
                    <div class="dataTables_info" id="default-datatable_info" role="status" aria-live="polite">نمایش تعداد 10 برند در هر صفحه از تعداد کل : @Model.ProductBrands.Count برند</div>
                </div>
            </div>
        </div>
    </div>
</div>


