@model Eshop.Domain.Dtos.Product.CreateProductColorDto

@{
    ViewData["Title"] = "افزودن رنگ جدید";
}


@section scripts
{
    <partial name="_AdminJqueryValidators" />

}

<div class="row pt-2 pb-2">
    <div class="col-sm-9">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Administration" asp-controller="Home" asp-action="Index">داشبورد</a></li>
            <li class="breadcrumb-item"><a href="javaScript:void();">مدیریت کاربران</a></li>
            <li class="breadcrumb-item"><a href="javaScript:void();">مدیریت رنگ ها</a></li>
            <li class="breadcrumb-item"><a href="javaScript:void();">@ViewData["Title"]</a></li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header"><i class="fa fa-plus"></i> @ViewData["Title"]</div>
            <div class="card-body">

                <form asp-area="Administration" asp-controller="Product" asp-action="CreateProductColor" method="post">
                    <div class="row">
                        <div class="form-group col-lg-3">
                            <label>نام رنگ</label>
                            <input class="form-control" asp-for="ColorName" required="" />
                            <span class="text-danger float-right" asp-validation-for="ColorName"></span>
                        </div>
                        <div class="form-group col-lg-3">
                            <label>کد رنگ</label>
                            <input class="form-control" type="color" asp-for="ColorCode" required="" />
                            <span class="text-danger float-right" asp-validation-for="ColorCode"></span>
                        </div>
                        <div class="form-group col-lg-3">
                            <label>قیمت مضاف</label>
                            <input class="form-control" asp-for="Price" required="" />
                            <span class="text-danger float-right" asp-validation-for="Price"></span>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success btn-block">افزودن رنگ جدید</button>
                </form>
            </div>
        </div>
    </div>
</div>