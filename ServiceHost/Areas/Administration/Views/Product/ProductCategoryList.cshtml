@using Eshop.Application.Utilities
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Eshop.Domain.Dtos.ProductCategory.FilterProductCategoryDto

@{
    ViewData["Title"] = "لیست دسته بندی محصولات";
}


@section scripts
    {
    <partial name="_JqueryValidators" />
}

<div class="row pt-2 pb-2">
    <div class="col-sm-9">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Administration" asp-controller="Home" asp-action="Index">داشبورد</a></li>
            <li class="breadcrumb-item"><a href="javaScript:void();">مدیریت محصولات</a></li>
            <li class="breadcrumb-item"><a href="javaScript:void();">@ViewData["Title"]</a></li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header"><i class="fa fa-filter"></i> فیلتر ها</div>
            <div class="card-body">

                <form asp-area="Administration" asp-controller="Product" asp-action="ProductCategoryList" method="get" id="filter-form">
                    <input type="hidden" asp-for="PageId" />
                    <div class="row">
                        <div class="form-group col-lg-8">
                            <label>نام دسته محصول</label>
                            <input class="form-control" asp-for="Title" />
                        </div>
                        <div class="form-group col-lg-4">
                            <label>اعمال فیلتر</label>
                            <button type="submit" class="btn btn-main-primary btn-block">اعمال فیلتر</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <i class="fa fa-table"></i>
                @ViewData["Title"]
                <hr />
                <a class="btn btn-success btn-block" style="font-size: 16px; height: 40px;"
                   asp-area="Administration" asp-controller="Product"
                   asp-action="CreateProductCategory">
                    افزودن دسته بندی جدید
                </a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <div id="default-datatable_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                        <br />
                        <div class="row">
                            <div class="col-sm-12">
                                @if (Model.ProductCategories != null && Model.ProductCategories.Any())
                                {
                                    <table id="default-datatable" class="table table-bordered dataTable" role="grid" aria-describedby="default-datatable_info">
                                        <thead>
                                            <tr role="row">
                                                <th class="sorting_asc">شناسه</th>
                                                <th class="sorting">تصویر</th>
                                                <th class="sorting">نام دسته</th>
                                                <th class="sorting">لینک</th>
                                                <th class="sorting">آیکون</th>
                                                <th class="sorting">وضعیت</th>
                                                <th class="sorting">تاریخ ایجاد</th>
                                                <th class="sorting">ویرایش شده</th>
                                                <th class="sorting">دستورات</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @foreach (var category in Model.ProductCategories)
                                            {
                                                <tr id="ajax-url-item-@category.Id" role="row" class="odd">
                                                    <td>@category.Id</td>
                                                    <td class="sorting">
                                                        <img style="width: 50px; height: 50px;"
                                                             src="@(!string.IsNullOrEmpty(category.Image) ? PathExtension.ProductCategoryOrigin + category.Image : PathExtension.NoImage)" alt="@category.Title" />
                                                    </td>

                                                    <td>@category.Title</td>
                                                    <td>@category.UrlName</td>
                                                    @if (category.Icon != null)
                                                    {
                                                        <td>@category.Icon</td>
                                                    }
                                                    else
                                                    {
                                                        <td>---</td>
                                                    }
                                                    @if (category.IsActive)
                                                    {
                                                        <td>فعال</td>
                                                    }
                                                    else
                                                    {
                                                        <td>غیرفعال</td>
                                                    }
                                                    <td>@category.CreateDate.ToStringShamsiDate()</td>
                                                    <td>@category.LastUpdateDate.ToStringShamsiDate() | @category.UserName</td>
                                                    <td>
                                                        @if (category.IsActive)
                                                        {
                                                            <a class="btn btn-sm btn-danger"
                                                   asp-area="Administration" asp-controller="Product"
                                                   asp-action="DeActiveCategory"
                                                   asp-route-categoryId="@category.Id">
                                                                غیرفعال کردن
                                                            </a>
                                                        }
                                                        else
                                                        {
                                                            <a class="btn btn-sm btn-success"
                                                   asp-area="Administration" asp-controller="Product"
                                                   asp-action="ActiveCategory"
                                                   asp-route-categoryId="@category.Id">
                                                                فعال کردن
                                                            </a>
                                                        }
                                                        <a class="btn btn-sm btn-warning"
                                                   asp-area="Administration" asp-controller="Product"
                                                   asp-action="EditProductCategory"
                                                   asp-route-id="@category.Id">
                                                            ویرایش دسته
                                                        </a>
                                                        <a class="btn btn-sm btn-dark"
                                                   asp-area="Administration" asp-controller="Product"
                                                   asp-action="CreateProductSubCategory" asp-route-categoryName="@category.Title.FixTextForUrl()"
                                                   asp-route-parentId="@category.Id">
                                                            افزودن زیر دسته
                                                        </a>
                                                        <a class="btn btn-sm btn-primary"
                                                   asp-area="Administration" asp-controller="Product"
                                                   asp-action="ProductSubCategoryList" asp-route-categoryName="@category.Title.FixTextForUrl()"
                                                   asp-route-parentId="@category.Id">
                                                            نمایش زیردسته ها
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                }
                                else
                                {
                                    <div class="alert alert-warning alert-dismissible mb-0" role="alert">
                                        <div class="alert-icon">
                                            <i class="fa fa-exclamation-triangle"></i>
                                        </div>
                                        <div class="alert-message text-dark">
                                            <span><strong>هشدار!</strong> هیچ اطلاعاتی یافت نشد</span>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                        <hr />
                        <hr />
                    </div>
                </div>
                <br />
                <partial name="_AdminPaging" model="@Model.GetCurrentPaging()" />
                <div class="col-sm-12 col-md-12">
                    <div class="dataTables_info" id="default-datatable_info" role="status" aria-live="polite">نمایش تعداد 10 محصول در هر صفحه از تعداد کل : @Model.ProductCategories.Count دسته محصول</div>
                </div>
            </div>
        </div>
    </div>
</div>


