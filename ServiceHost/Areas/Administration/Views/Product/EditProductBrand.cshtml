@model Eshop.Domain.Dtos.Product.EditProductBrandDto

@{
    ViewData["Title"] = "ویرایش برند";
}



<div class="row pt-2 pb-2">
    <div class="col-sm-9">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Administration" asp-controller="Home" asp-action="Index">داشبورد</a></li>
            <li class="breadcrumb-item"><a href="javaScript:void();">مدیریت برند ها</a></li>
            <li class="breadcrumb-item"><a href="javaScript:void();">@ViewData["Title"]</a></li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header"><i class="fa fa-plus"></i> @ViewData["Title"]</div>
            <div class="card-body">
                <form asp-area="Administration" asp-controller="Product" asp-action="EditProductBrand" method="post" enctype="multipart/form-data" id="filter-form">
                    <input type="hidden" asp-for="Id"/>
                    <div class="row">
                        <div class="form-group col-lg-12">
                            <label>نام برند</label>
                            <input class="form-control" asp-for="BrandName" />
                            <span class="text-danger float-right" asp-validation-for="BrandName"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-12">
                            <label>توضیحات</label>
                            <textarea class="form-control" rows="5" asp-for="Description"></textarea>
                            <span class="text-danger float-right" asp-validation-for="Description"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-12">
                            <label>آپلود تصویر</label>
                            <input type="file" name="brandImage" class="form-control" accept=".png, .jpeg, .jpg"/>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-warning btn-block">ویرایش برند</button>
                </form>
            </div>
        </div>
    </div>
</div>




