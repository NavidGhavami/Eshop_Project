@using Eshop.Application.Utilities
@model List<Eshop.Domain.Dtos.ProductDiscount.ProductDiscountAmazing>


@if (Model != null && Model.Any(x => x.ExpireDate >= DateTime.Now))
{
    <section class="offers pt-md-3 pt-0">
        <div class="container-fluid">
            <div class="offer slider-parent border-ui">
                <div class="row">
                    <div class="col-lg-8">

                        <div class="swiper" id="offerItem">
                            <div class="swiper-wrapper pb-lg-0 pb-4">

                                @foreach (var item in Model)
                                {
                                    <div class="swiper-slide">
                                        <div class="offer-item">
                                            <div class="row">

                                                <div class="col-md-5">
                                                    <div class="offer-discount">
                                                        <span>@item.Percentage % تخفیف</span>
                                                    </div>

                                                    <div class="offer-img">
                                                        <a asp-controller="Product" asp-action="ProductDetails" asp-route-productId="@item.ProductId" asp-route-title="@item.ProductTitle.FixTextForUrl()">
                                                            <img src="@(!string.IsNullOrEmpty(item.ProductImage)
                                                                          ? PathExtension.ProductOrigin + item.ProductImage
                                                                          : PathExtension.NoImage)"
                                                                 alt="@item.ProductTitle"
                                                                 title="@item.ProductTitle"
                                                                 class="img-fluid">
                                                        </a>
                                                      
                                                    </div>
                                                </div>

                                                <div class="col-md-7">
                                                    <div class="card border-0">
                                                        <div class="card-body">

                                                            <h5 class="card-title text-overflow-2 h-60-px">
                                                                @item.ProductTitle
                                                            </h5>

                                                            <p class="card-text w-100 text-end">
                                                                <span>(2500 نفر)</span>
                                                                <span class="text-warning d-inline-flex align-items-center">
                                                                    <span class="mx-1 lh-sm">4</span>
                                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                                                         fill="currentColor" class="bi bi-star-fill"
                                                                         viewBox="0 0 16 16">
                                                                        <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                                                                    </svg>
                                                                </span>
                                                            </p>

                                                            <div class="d-flex align-items-center justify-content-between">
                                                                <div class="countdown mt-1"
                                                                     data-date="@item.ExpireDate.ToString("yyyy-M-d")"
                                                                     data-time="00:00">
                                                                </div>
                                                                <div class="d-flex flex-column">
                                                                    <p class="card-text fs-6 text-decoration-line-through text-end bs-text-gray-600">
                                                                        @item.ProductPrice.ToString("##,###")
                                                                    </p>

                                                                    <p class="card-text fw-bold fs-5">
                                                                        @(Convert.ToInt32(
                                                                            item.ProductPrice - ((item.ProductPrice * item.Percentage) / 100.0)).ToString("#,0"))
                                                                        <span class="fw-normal fs-6">تومان</span>
                                                                    </p>
                                                                </div>
                                                            </div>

                                                            <div class="progress bs-bg-gray-400 my-2"
                                                                 role="progressbar"
                                                                 aria-valuenow="63"
                                                                 aria-valuemin="0"
                                                                 aria-valuemax="100"
                                                                 style="height: 4px">
                                                                <div class="progress-bar main-color-one-bg" style="width: 63%"></div>
                                                            </div>

                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                }

                            </div>

                            <div class="swiper-pagination d-lg-none d-block"></div>
                        </div>

                    </div>

                    <div class="col-lg-4 d-lg-block d-none">
                        <div class="offer-item-link">
                            <div class="swiper" id="offerItemLink">
                                <div class="swiper-wrapper">

                                    @foreach (var item in Model)
                                    {
                                        <div class="swiper-slide">
                                            <div class="offer-item-link-item shadow-sm">
                                                <h6>@item.ProductTitle</h6>
                                            </div>
                                        </div>
                                    }

                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
}
